<% include ../partials/header %>
<div class="container">
 <div class="row justify-content-center"> <!--it keeps the form centered-->
  <div class="col-md-12 text-center">
   <h1>Create a New Campground</h1>
  </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
       <form action="/campgrounds" method="POST">
         <div class="form-group">
          <label for="name">Name</label>
          <input class="form-control" type="text" placeholder="name" name="name" id="name">
         </div> 
         <div class="form-group">
          <label for="image">Image Url</label>
          <input class="form-control" type="text" placeholder="image url" name="image" id="image">
         </div>
         <div class="form-group">
           <label for="cost">Cost</label>
           <input class="form-control" type="number" placeholder="9.99" name="cost" id="cost" step="0.01" min="0" required>
         </div>
         <!--<div class="form-group">-->
         <!-- <label for="location">Location</label>-->
         <!-- <input class="form-control" type="text" placeholder="location" name="location" id="location">-->
         <!--</div>-->
          <div class="form-group">
           <label for="location">Description</label>
          <input class="form-control" type="text" placeholder="description" name="description" id="description">
         </div>
         <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
       </form>  
      <a href="/campgrounds">Go Back</a>
    </div>
 </div>
</div>
 

