<% include ./partials/header %>

<div class="container">
    <header class="jumbotron">
      <div class="container">
        <h1>Welcome to Tea Leaves!</h1>
        <p>Check out plenty of recipes from all over the World</p>
        <p>
          <a class="btn btn-primary btn-lg" href="/recipes/new">Add New Recipe</a>
        </p> 
        <p>
         <form action="/recipes" method="GET" class="form-inline" id="recipe-search">
            <div class="form-group">
              <input type="text" name="search" placeholder="Recipe search..." class="form-control">
            </div>
          </form>
        </p>
      </div> <!--to maintain the space around title when we shrink it-->
    </header>
        
        
    <div class="row text-center">
        <%recipes.forEach(function(recipe){%>
          <div class="col-lg-3 col-md-4 col-sm-6 mb-4"> <!--from bigger to smaller images when we shrink down-->
            <div class="card">
                      <img src="<%=recipe.image%>" class="card-img-top" alt="<%=recipe.image%>">

                  <div class="card-body">
                    <a class="card-title" id="title" href="/recipes/<%=recipe._id %>">
                        <h5 class="card-title"><%=recipe.title%></h5>
                        </a>
                     <span><%=recipe.created.toDateString()%></span>
                     
                     <div class="card-text">
                       <p><%-recipe.body.substring(0, 100) %>...</p>
                     </div>
                     
                     <span>
                        <a class="btn btn-secondary" href="/recipes/<%=recipe._id%>">
                           Read More
                           <i class="hand point right icon"></i>
                        </a>
                     </span>
                  </div>
              </div>
            </div>
        <% }) %>
    </div>
</div>

<% include ./partials/footer %>