<% include ../partials/header %>

 <div class="container">
    <div class="row justify-content-center">
     <div class="col-md-12 text-center mt-4"> 
     <h1>Edit <%=recipe.title%></h1>
     </div>
     <div style="col-xs-12 col-md-6 col-lg-4">
      <form action="/recipes/<%=recipe._id %>?_method=PUT" method="POST">
       <div class="form-group">
           <label for="title">Title</label>
        <input class="form-control" type="text" name="title" id="title" value="<%=recipe.title%>">
        </div>
        <div class="form-group">
           <label for="image">Image</label>
        <input class="form-control" type="text" name="image" id="image" value="<%=recipe.image%>">
        </div>
        
        <div class="container">
         
        <p>
         <label for="select">Difficulty</label>
         <select id="select">
          <option value="<%=recipe.difficulty%>"><%=recipe.difficulty%></option>
            <optgroup label="How hard is it">
              <option value="Easy">Easy</option>
              <option value="Average">Average</option>
              <option value="Difficult">Difficult</option>
            </optgroup>
         </select>
        </p>
         
          <!--<div class="dropdown">-->
          <!-- <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" name="difficulty">-->
          <!--    Difficulty</button>-->
          <!--    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">-->
          <!--    <a class="dropdown-item" href="#">Easy</a>-->
          <!--    <a class="dropdown-item" href="#">Average</a>-->
          <!--    <a class="dropdown-item" href="#">Difficult</a>-->
          <!--  </div>-->
          <!--</div>-->
          
          <div class="form-group">
             <label for="preparation">Preparation</label>
             <input class="form-control" type="text" name="preparation" id="preparation" value="<%=recipe.preparation%>">
          </div>
          <div class="form-group">
             <label for="cooking">Cooking</label>
             <input class="form-control" type="text" name="cooking" id="cooking" value="<%=recipe.cooking%>">
          </div>
          <div class="form-group">
             <label for="portion">Portion</label>
             <input class="form-control" type="text" name="portion" id="portion" value="<%=recipe.portion%>">
          </div>
          <div class="form-group">
              <label for="cost">Cost</label>
              <input class="form-control" type="number" name="cost" id="cost" value="<%=recipe.cost%>" step="0.01" min="0" required>
          </div>
         
         </div>
         
        <div class="form-group">
           <label for="description">Recipe content</label>
           <textarea id="textarea" rows="20" name="description"><%=recipe.description%></textarea>
        </div>
        <div class="form-group">
           <button class="btn btn-lg btn-primary btn-block">Update!</button>
        </div>
    </form>
    <a href="/recipes">Go Back</a>
   </div>
  </div>
</div>

<% include ../partials/footer %>